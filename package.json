{
  "name": "scripture-media-trial-content-app",
  "version": "1.0.0",
  "description": "An app designed to allow specific people to share trial content with a limited audience",
  "private": true,
  "workspaces": [
    "mobile-app",
    "desktop-app",
    "shared"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:mobile && npm run setup:desktop",
    "setup:mobile": "cd mobile-app && npm install",
    "setup:desktop": "cd desktop-app && npm install",
    "mobile": "cd mobile-app && npm start",
    "desktop": "cd desktop-app && npm start",
    "build:mobile": "cd mobile-app && npm run build",
    "build:desktop": "cd desktop-app && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rulingAnts/scripture_media_trial_content_app.git"
  },
  "keywords": [
    "scripture",
    "media",
    "trial",
    "android",
    "electron"
  ],
  "author": "",
  "license": "MIT"
}
